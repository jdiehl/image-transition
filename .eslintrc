# rules
rules:

  # style settings
  indent:
    - 2
    - 2
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always

  # possible errors
  no-extra-parens: 2
  valid-jsdoc: 2

  # best practices
  block-scoped-var: 2
  complexity:
    - 2
    - 5
  eqeqeq: 2
  curly:
    - 2
    - multi-line
  dot-location:
    - 2
    - property
  dot-notation: 2
  no-alert: 2
  no-caller: 2
  no-case-declarations: 2
  no-else-return: 2
  no-empty-pattern: 2
  no-eval: 2
  no-extend-native: 2
  no-implicit-coercion: 2
  no-implied-eval: 2
  no-invalid-this: 2
  no-iterator: 2
  no-labels: 2
  no-lone-blocks: 2
  no-loop-func: 2
  no-multi-spaces: 2
  no-multi-str: 2
  no-native-reassign: 2
  no-new-func: 2
  no-new-wrappers: 2
  no-new: 2
  no-octal-escape: 2
  no-octal: 2
  no-proto: 2
  no-redeclare: 2
  no-script-url: 2
  no-self-compare: 2
  no-sequences: 2
  no-throw-literal: 2
  no-unused-expressions: 2
  no-useless-call: 2
  no-useless-concat: 2
  no-void: 2
  no-with: 2
  wrap-iife: 2
  yoda: 2

  # strict mode
  strict: 2

  # vairables
  no-shadow-restricted-names: 2
  no-undef-init: 2
  no-use-before-define: 2

# environment
env:
  browser: true

# predefined globals
globals:
  angular: true

# use recommended rules
extends: 'eslint:recommended'
